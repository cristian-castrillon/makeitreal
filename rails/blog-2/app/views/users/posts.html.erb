<% if @posts.empty? %>
  <h1>There is no post</h1>
  <%= link_to "Create your first post", new_user_post_path(current_user) %>
<% else %>
  <% @posts.each do |post| %>
    <h1><%= post.title %></h1>
    <textarea name="" id="" cols="30" rows="10">
      <%= post.content %>
    </textarea>
  <% end %>
<%= link_to "Create another post", new_user_post_path(current_user) %>
<% end %>
